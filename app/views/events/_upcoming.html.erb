<h1>Upcoming events: </h1>
<div class="all-events-body">
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Fecha</th>
        <th>Hora</th>
        <th>Ubitacion</th>
        <th>Entradas Vendidas</th>
        <th>Entradas Disponibles</th>
        <th>Entradas Totales</th>
        
        <th colspan="3"></th>
      </tr>
    </thead>

  <% @upcoming_events.each do |event| %>
    <tr>
      <td><%= link_to "#{event.name}", event%></td>
      <% if event.datetime %>
        <td><%= event.date_formatted %></td>
      <% end %>
      <% if event.datetime %>
        <td><%= event.time_formatted %></td>
      <% end %>
      <td><%= event.location %></td>
      <td><%= event.customer_count %></td>
      <td><%= event.available_tickets %></td>
      <td><%= event.tickets %></td>
    </tr>
  <% end %>
  </table>
</div>

