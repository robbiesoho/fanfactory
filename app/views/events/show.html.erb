<% provide(:title, @event.name) %>
<%= render 'application/header' %>

  <h1 class="show-event-title"><%= @event.name %></h1>
  
  <%= image_tag(@event.image, class: "event-img") if @event.image.attached? %>

  <table>
    <thead>
    <tr>
      <th>Ubitacion</th>
      <th>Fecha</th>
      <th>Hora</th>

      <th colspan="3"></th>
    </tr>
  </thead>
    <tr>
      <td><%= @event.location %></td>

      <% if @event.datetime %>
        <td><%= @event.date_formatted %></td>
        <td><%= @event.time_formatted %></td>
      <% end %>
    </tr>
  </table>
  <%= link_to "Edit #{@event.name}", edit_event_path(@event) %>
  <br>
  <%= link_to "Delete Event", @event, method: :delete,
data: { confirm: "Are you sure you want to delete #{@event.name}?" } %>
  </div>
  <br>

  <div class="event-page-customer-show">
    <h3>Clientes confirmados: (<%= @event.customer_count %>)</h3>
    <table>
    <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Numero de Tele</th>
          
          <th colspan="3"></th>
        </tr>
    </thead>
    <% if @event.customers %>
      <% @event.customers.each do |customer| %>
        <tr>
          <td><%= link_to "#{customer.id}", customer%></td>
          <td><%= link_to "#{customer.name}", customer%></td>
          <td><%= customer.email %></td>
          <td><%= customer.phone %></td>
        </tr>
      <%end%>
    <%end%>

    <div class="auxlinks">
      <br>
      <%= link_to 'Edit/Add Customers', add_event_path(@event) %>
    </div>
  </div>